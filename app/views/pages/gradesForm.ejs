<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>
  <body>
    <%- include("../partials/navigation") %> 
    


    <h1>questions</h1>
    
    <form action="/students/gradesForm" method="POST" id="form">
       <p>
          <label for="name">name:</label>
          <input type="text" name="name" id="name" />
        </p>
        <p>
          <label for="surname">surname:</label>
          <input type="text" name="surname" id="surname" />
        </p>

        <div id="questions"></div>
        <input type="submit" value="submit" />
      </form>
  
    <script>
      var questions = [
        "question1",
        "question2",
        "question4",
        "question5",
        "question6",
        "question7",
        "question8",
        "question9",
        "question10",
        "question11",
        "question12",
        "question13",
        "question14",
        "question15",
      ];

      var questionsHtml = questions
        .map((question) => {
          return `<p><label for="${question}">${question}</label><input type="text" name="${question}"/></p>`;
        })
        .join("");

      document.getElementById("questions").innerHTML = questionsHtml;

      document.getElementById("form").addEventListener("submit", (e) => {
        e.preventDefault();

        var arrOfInputs = document.getElementById("form").elements;

        var totalGrades = 0;

        for (i = 0; i < arrOfInputs.length; i++) {
          const element = arrOfInputs[i];
          if (
            element.name.startsWith("question") &&
            element.value === "correct answer"
          ) {
            totalGrades += 1;
          }
        }

        //при сабмите отправляем на бек фио и оценка c помощью метода пост из jquery
        $.post(
          "/students/gradesForm",
          {
            name: document.getElementById("name").value,
            surname: document.getElementById("surname").value,
            totalGrades: totalGrades,
          },
          //колбек который получает результат бека
          function (data) {
            const gradeContainer = document.createElement("div");
            gradeContainer.innerHTML = data;
            document.getElementById("form").append(gradeContainer);
          }
        );
      });
    </script>
    </form> 


  </body>
</html>
